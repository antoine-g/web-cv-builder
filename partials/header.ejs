<div id="header" role="heading" aria-level="1">
  <img class="img-circle" id="avatar" alt="avatar" src="<%= url('res/avatar.png') %>"/>
  <h1><%= title %></h1>
  <ul class="nav nav-pills">
    <li><a href="mailto:<%= email %>" title="Email"><span class="glyphicon glyphicon-envelope"></span>Email</a></li>
    <li><a href="<%= github_url %>" title="Github"><span class="glyphicon glyphicon-folder-open"></span>Github</a></li>
<%if (blog_url) { %>
    <li><a href="<%= blog_url %>" title="Blog"><span class="glyphicon glyphicon-bold"></span>Blog</a></li>
<% } %>
  </ul>
</div>
